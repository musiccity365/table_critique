<%= form_for(@review) do |f| %>
  <%= f.fields_for :restaurant do |restaurant_field| %>
    <%= restaurant_field.label "Restaurant Name:" %>
    <%= restaurant_field.text_field :name %>
    <p>

    <%= restaurant_field.label :category_id %>
    <%= restaurant_field.collection_select :category_id, Category.all, :id, :name, prompt: true %>
  <% end %>
  <p>

    <%= f.label "Review Title:"%>
    <%= f.text_field :title %>
    <p>

    <%= f.label "Content:" %>
    <%= f.text_area :content %>
    <p>

    <%= f.submit %>
  <% end %>
